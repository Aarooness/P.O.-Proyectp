                        matriz[fi2-1][co2-1]='o';matriz[fi2-1][co2]='+';matriz[fi-1][co-1]='+';
                         for(int h=0;h<7;h++){
                             for(int p=0;p<7;p++){
                                 cout<<matriz[h][p]<<"   ";
                             }
                             cout<<endl;
                         }
                    }

                }

                if (fi==fi2 && co<=4) {
                    if (matriz[fi2 - 1][co2 - 1] =='+' &&  matriz[fi2-1][co2-2]=='o'){
                        matriz[fi2-1][co2-1]='o';matriz[fi2-1][co2-2]='+';matriz[fi-1][co-1]='+';

                        for(int h=0;h<7;h++){
                            for(int p=0;p<7;p++){
                                cout<<matriz[h][p]<<"   ";
                            }
                            cout<<endl;
                        }
                    }
                 }

            //GIANCARLO AGREGA ESTO NADA MAS A LA FUNCION JUEGA()
            for(int l=0;l<7;l++){
                for (int k=0;k<7;k++){
                    if(matriz[l][k]=='o'){
                        cont=cont+1;
                    }
                }
            }

            if(cont==1){
                i=i+200;
                cout<<"JUEGO TERMINADO"<<endl;

            }
            else{
                cont=0;
            }
            //HASTA AQUIIIIIIIII


            }
            else{
                cout<<"no valido, repita"<<endl;
